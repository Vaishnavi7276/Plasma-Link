<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PlasmaLink</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
    crossorigin="anonymous"
    >
    <style>
        /* Custom CSS to center the table */
        .center-table {
            margin: 0 auto;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="m-5">
    <table class="table table-bordered center-table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Donor_Name</th>
                <th scope="col">Donation_For</th>
                <th scope="col">Blood Type</th>
                <th scope="col">Gender</th>
                <th scope="col">Contact</th>
                <th scope="col">Address</th>
                <th scope="col">Accept</th>
                <th scope="col">Reject</th>
            </tr>
        </thead>
        <tbody>
            <% donors.forEach((donor, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= donor.donorname %></td>
                    <td><%= donor.donation_for %></td>
                    <td><%= donor.bloodtype %></td>
                    <td><%= donor.gender %></td>
                    <td><%= donor.contact %></td>
                    <td><%= donor.address %></td>
                    <td><a href="/sendMail">
                        <button type="button" onclick="changeColorAndText()" class="btn btn-outline-success btn-sm" >
                        Accepted
                        </button>
                    </a></td>
                    <td><button type="button" class="btn btn-outline-danger btn-sm">Reject</button></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
    <script>
    function changeColorAndText() {
        var button = document.getElementById("acceptBtn");
        if (button.innerHTML === "Accept") {
            button.style.backgroundColor = "gray";
            button.innerHTML = "Accepted";
        }
    }
    </script>
</body>
</html>